  <form action="{{url_for('filme.avaliar', id_filme=id_filme)}}" method="POST">
     <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"/>
     <label>Estrelas</label>
     <input type="radio" name='estrelas' value="1"/>
     <input type="radio" name='estrelas' value="2"/>
     <input type="radio" name='estrelas' value="3"/>
     <input type="radio" name='estrelas' value="4"/>
     <input type="radio" name='estrelas' value="5"/>
     <div>
        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo"/>
     </div>
     <div>
        <label for="corpo">Corpo:</label>
        <textarea type="text" name="corpo" placeholder="NÃ£o gostei porque..."></textarea>
     </div>
     <input type="submit" value="Enviar"/>
  </form>
{% endblock %}
